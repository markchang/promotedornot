- title "#{@promotion.name}", false

- if is_signed_in_user?(@promotion.uid)
	#user_nav
		%a.twitter-share-button{"data-count" => "none", "data-text" => "Follow my promotion: ", "data-url" => "#{promotion_url(@promotion)}", "data-via" => "promotedornot", :href => "http://twitter.com/share"} Tweet
		%script{:src => "http://platform.twitter.com/widgets.js", :type => "text/javascript"}
		%br/
		= link_to 'Edit', edit_promotion_path(@promotion)
		|
		= link_to 'Destroy', @promotion, :confirm => 'Are you sure?', :method => :delete
		|
		= link_to 'Home', root_url	
	
.promotion-big
	= promotion_yes_no_pending @promotion
.promotion-main
	%b= @promotion.name
	= promotion_status_text @promotion
	%b= @promotion.position
	at
	%br/
	%b= @promotion.employer
.promotion-time
	Updated
	= time_ago_in_words @promotion.updated_at
	ago

#footer
	= link_to 'Home', :root