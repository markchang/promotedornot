!!!
%html
	%head
		%title
			= yield(:title) || "Untitled"
		%meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
		= stylesheet_link_tag "big", 'formtastic', 'formtastic_changes'
		= javascript_include_tag :defaults
		= csrf_meta_tag
		= yield(:head)

	%body
		- if show_title?
			%h1= yield(:title)

		= yield
